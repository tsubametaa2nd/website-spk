<div id="validation-status" class="hidden mb-6">
  <div id="validation-success" class="alert-success hidden">
    <svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
    </svg>
    <div>
      <p class="font-medium">Data Valid</p>
      <p class="text-sm" id="validation-success-message">Semua data telah tervalidasi dengan benar.</p>
    </div>
  </div>
  
  <div id="validation-error" class="alert-error hidden">
    <svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
    </svg>
    <div>
      <p class="font-medium">Terdapat Kesalahan Data</p>
      <ul id="validation-error-list" class="text-sm list-disc list-inside mt-1">
      </ul>
    </div>
  </div>
  
  <div id="validation-warning" class="alert-warning hidden">
    <svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
    </svg>
    <div>
      <p class="font-medium">Peringatan</p>
      <p class="text-sm" id="validation-warning-message"></p>
    </div>
  </div>
</div>

<script>
  interface ValidationHelperInterface {
    showSuccess: (message: string) => void;
    showError: (errors: string[]) => void;
    showWarning: (message: string) => void;
    hideAll: () => void;
    hide: () => void;
  }

  const ValidationHelper: ValidationHelperInterface = {
    showSuccess(message: string): void {
      const container = document.getElementById('validation-status');
      const successEl = document.getElementById('validation-success');
      const messageEl = document.getElementById('validation-success-message');
      
      this.hideAll();
      container?.classList.remove('hidden');
      successEl?.classList.remove('hidden');
      if (messageEl) messageEl.textContent = message;
    },
    
    showError(errors: string[]): void {
      const container = document.getElementById('validation-status');
      const errorEl = document.getElementById('validation-error');
      const listEl = document.getElementById('validation-error-list');
      
      this.hideAll();
      container?.classList.remove('hidden');
      errorEl?.classList.remove('hidden');
      
      if (listEl) {
        listEl.innerHTML = errors.map((err: string) => `<li>${err}</li>`).join('');
      }
    },
    
    showWarning(message: string): void {
      const container = document.getElementById('validation-status');
      const warningEl = document.getElementById('validation-warning');
      const messageEl = document.getElementById('validation-warning-message');
      
      this.hideAll();
      container?.classList.remove('hidden');
      warningEl?.classList.remove('hidden');
      if (messageEl) messageEl.textContent = message;
    },
    
    hideAll(): void {
      document.getElementById('validation-success')?.classList.add('hidden');
      document.getElementById('validation-error')?.classList.add('hidden');
      document.getElementById('validation-warning')?.classList.add('hidden');
    },
    
    hide(): void {
      document.getElementById('validation-status')?.classList.add('hidden');
      this.hideAll();
    }
  };

  (window as any).ValidationHelper = ValidationHelper;
</script>

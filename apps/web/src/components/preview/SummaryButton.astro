---

import { FileText, Download, ChartBar, Users, Award } from 'lucide-astro';
---

<div id="summary-button-section" class="mt-8 px-2 hidden">
  <div class="flex items-center gap-4 mb-6">
    <div class="flex-1 h-0.5 bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
    <span class="text-sm font-semibold text-slate-500 uppercase tracking-wider whitespace-nowrap">Kesimpulan & Laporan</span>
    <div class="flex-1 h-0.5 bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
  </div>
  
  <div class="relative overflow-hidden bg-gradient-to-br from-sky-50 via-sky-100 to-sky-50 border-2 border-sky-500 rounded-3xl p-8 shadow-lg shadow-sky-500/15">
    <div class="absolute -top-1/2 -right-1/2 w-full h-full bg-[radial-gradient(circle,rgba(14,165,233,0.1)_0%,transparent_70%)] pointer-events-none"></div>
    
    <div class="relative flex items-start gap-5 mb-6">
      <div class="w-16 h-16 bg-gradient-to-br from-sky-600 to-sky-700 rounded-2xl flex items-center justify-center text-white shadow-lg shadow-sky-600/30 shrink-0">
        <FileText size={32} strokeWidth={1.5} />
      </div>
      <div class="flex-1 min-w-0">
        <h3 class="text-xl font-bold text-sky-900 mb-2 leading-tight">Rangkuman Analisis VIKOR</h3>
        <p class="text-[0.9375rem] text-slate-600 leading-relaxed">
          Unduh laporan lengkap dengan grafik dan analisis perhitungan 
          yang siap dimasukkan ke dalam jurnal akademik
        </p>
      </div>
    </div>
    
    <div class="relative flex flex-wrap gap-4 mb-6 p-4 bg-white/70 rounded-xl">
      <div class="flex items-center gap-2 px-3.5 py-2 bg-white rounded-full text-[0.8125rem] font-medium text-sky-600 shadow-sm border border-sky-200">
        <ChartBar size={18} strokeWidth={2} />
        <span>Grafik Interaktif</span>
      </div>
      <div class="flex items-center gap-2 px-3.5 py-2 bg-white rounded-full text-[0.8125rem] font-medium text-sky-600 shadow-sm border border-sky-200">
        <Users size={18} strokeWidth={2} />
        <span>Ranking Kandidat</span>
      </div>
      <div class="flex items-center gap-2 px-3.5 py-2 bg-white rounded-full text-[0.8125rem] font-medium text-sky-600 shadow-sm border border-sky-200">
        <Award size={18} strokeWidth={2} />
        <span>Analisis Rekomendasi</span>
      </div>
    </div>
    
    <button id="btn-open-summary" class="group relative w-full flex items-center justify-between px-6 py-4 bg-gradient-to-br from-sky-600 to-sky-700 rounded-xl text-white text-base font-semibold cursor-pointer transition-all duration-300 shadow-lg shadow-sky-600/30 overflow-hidden hover:-translate-y-0.5 hover:shadow-xl hover:shadow-sky-600/40 active:translate-y-0">
      <div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent transition-[left] duration-500 group-hover:left-full"></div>
      
      <span class="flex items-center gap-3">
        <FileText size={20} strokeWidth={2} />
        <span>Lihat Kesimpulan & Download Laporan</span>
      </span>
      <span class="flex items-center justify-center w-10 h-10 bg-white/20 rounded-lg transition-all duration-300 group-hover:bg-white/30 group-hover:-translate-y-0.5">
        <Download size={20} strokeWidth={2} />
      </span>
    </button>
  </div>
</div>

<style>
  @media (max-width: 640px) {
    #summary-button-section .relative.overflow-hidden {
      @apply p-6;
    }
    
    #summary-button-section .relative.flex.items-start {
      @apply flex-col items-center text-center;
    }
    
    #summary-button-section .relative.flex.flex-wrap {
      @apply justify-center;
    }
    
    #summary-button-section button {
      @apply flex-col gap-4 px-5 py-5;
    }
    
    #summary-button-section button span:last-child {
      @apply hidden;
    }
  }
</style>

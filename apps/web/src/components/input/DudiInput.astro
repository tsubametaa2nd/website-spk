---

interface Props {
  id?: string;
}

const { id = 'dudi-input' } = Astro.props;
---

<div class="card-elevated" id={id}>
  <div class="flex items-center gap-3 mb-6">
    <div class="w-10 h-10 rounded-lg bg-accent-100 flex items-center justify-center">
      <svg class="w-5 h-5 text-accent-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-primary-900">Data Alternatif (DUDI)</h2>
      <p class="text-sm text-secondary-500">Tempat magang yang tersedia</p>
    </div>
  </div>

  <div id="dudi-file">
    <label class="label">Upload CSV/Excel</label>
    <input type="file" id="dudi-file-input" accept=".csv,.xls,.xlsx" class="input file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-accent-100 file:text-accent-800 file:cursor-pointer" />
    <button id="btn-upload-dudi" class="btn-accent w-full mt-4">Upload & Parse</button>
  </div>

  <div id="dudi-preview" class="mt-6 hidden">
    <h4 class="font-medium text-secondary-700 mb-2">Preview Data DUDI</h4>
    <div class="table-container max-h-48 overflow-y-auto">
      <table class="table" id="dudi-table">
        <thead>
          <tr>
            <th>Kode</th>
            <th>Nama DUDI</th>
            <th>Jarak (km)</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
